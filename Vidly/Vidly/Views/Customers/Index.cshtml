@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "btn btn-primary mb2" })

@if (Model.Count() == 0)
{
    <p>We don't have any customer yet.</p>
}
else
{
    //using (Html.BeginForm("Delete", "Customers", FormMethod.Post, new { onSubmit = "return confirm('Are you sure you want to perform these action?')" }))
    //{
        <table id="customers" class="table table-bordered table-hover table-striped table-responsive table-condensed">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Membership Type</th>
                    <th>Action</th>
                    @*<th>Select</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }, null)</td>
                        <td>@customer.MembershipType.Name</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Customers", new { id = customer.Id }, new { @class = "btn-link" }) |
                            <button class="btn-link js-delete" data-customer-id="@customer.Id">Delete</button>
                        </td>
                        @*<td>
                            <input type="checkbox" name="customer_id" value="@customer.Id" />
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>

        @*<button type="submit" class="btn btn-danger js-delete-all">Delete</button>        
    }*@
}

@section scripts
{
    <script>
        $(document).ready(function () {

            $("#customers").DataTable();

            $("#customers").on("click", ".js-delete", function () {

                var button = $(this);

                bootbox.confirm("Are you sure you want to delete these customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
                                
            });
        });
    </script>    
}